{
	"info": {
		"_postman_id": "dashboard-api-testing",
		"name": "Dashboard API Testing",
		"description": "Collection for testing the new admin dashboard API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login to get JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Login to get JWT token for authentication"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints to get JWT tokens"
		},
		{
			"name": "Dashboard Metrics",
			"item": [
				{
					"name": "Get Dashboard Overview Metrics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/dashboard/metrics",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"dashboard",
								"metrics"
							]
						},
						"description": "Fetches all key metrics for admin dashboard including total tenants, users, active users, and new clients"
					},
					"response": []
				},
				{
					"name": "Get Tenant Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/dashboard/tenants/{{tenantId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"dashboard",
								"tenants",
								"{{tenantId}}"
							]
						},
						"description": "Fetches detailed information about a specific tenant"
					},
					"response": []
				}
			],
			"description": "Main dashboard metrics endpoints"
		},
		{
			"name": "Enhanced Tenant Endpoints",
			"item": [
				{
					"name": "Get Tenants with Statistics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tenants/with-stats?page=1&limit=10&search=",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tenants",
								"with-stats"
							],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page"
								},
								{
									"key": "search",
									"value": "",
									"description": "Search term for name, domain, or email"
								}
							]
						},
						"description": "Fetches paginated list of tenants with their statistics"
					},
					"response": []
				},
				{
					"name": "Get Tenant Analytics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tenants/{{tenantId}}/analytics",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tenants",
								"{{tenantId}}",
								"analytics"
							]
						},
						"description": "Fetches detailed analytics for a specific tenant"
					},
					"response": []
				},
				{
					"name": "Get All Tenants",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwtToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tenants",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tenants"
							]
						},
						"description": "Fetches all tenants (existing endpoint)"
					},
					"response": []
				}
			],
			"description": "Enhanced tenant endpoints with statistics and analytics"
		},
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"health"
							]
						},
						"description": "Check if the server is running"
					},
					"response": []
				},
				{
					"name": "Test Root Route",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/test-root",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"test-root"
							]
						},
						"description": "Test if the server is reachable"
					},
					"response": []
				}
			],
			"description": "Health check endpoints"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:4000",
			"type": "string"
		},
		{
			"key": "jwtToken",
			"value": "your-jwt-token-here",
			"type": "string"
		},
		{
			"key": "tenantId",
			"value": "example-tenant-id",
			"type": "string"
		}
	]
} 